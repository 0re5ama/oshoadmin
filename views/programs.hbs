<div class="container-fluid" id='programForm'>
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header card-header-primary">
					<h4 class="card-title">\{{ addEdit }} Program</h4>
					<p class="card-category">Enter the Program details below</p>
				</div>
				<div class="card-body">
					<form>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="bmd-label-floating">Program</label>
									<select class="form-control" id="selProgram" v-model="selectedProg">
										<option disabled value="">Please select one</option>
										<option v-for="option in programs" v-bind:value="option">\{{ option.name }}</option>
										\{{ selectedProg }}
									</select>
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="label-control">Venue</label>
									<select class="form-control" id="selVenue" v-model="selectedVenue">
										<option v-for="option in venues" v-bind:value="option.id">\{{ option.name }}</option>
									</select>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label class="bmd-label-floating">From Date</label>
									<input type="text" class="form-control datetimepicker futuredate" id="fromDate" />
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label class="bmd-label-floating">To Date</label>
									<input type="text" class="form-control datetimepicker futuredate" id="toDate" />
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label class="bmd-label-floating">Acharya/Acharyashree</label>
									<select class="form-control" id="selAcharya" multiple="multiple" v-model="selectedAcharyas">
										<option v-for="option in acharyas" v-bind:value="option.id">\{{ option.name }}</option>
									</select>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label class="bmd-label-floating">Remarks</label>
									<textarea class="form-control" rows="5"></textarea>
								</div>
							</div>
						</div>
						<div class="clearfix"></div>
					</form>
					<button class="btn btn-primary pull-right" @click="addProg">\{{ addEdit }}</button>
				</div>
			</div>
		</div>
	</div>
</div>
